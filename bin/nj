#!/bin/zsh
source ~/.zshrc

FILE=$(date "+%Y%m%d.txt")
cd ~j/d
if [ -f ${FILE} ] ; then
    oe ${FILE}
    git commit -m "Editted journal entry" ${FILE}
else
    LANG=en date "+%A, %B %e %Y%n%n" > ${FILE}
    echo >> ${FILE}
    gshuf -n 1 ~j/prompts.txt >> ${FILE}
    echo >> ${FILE}
    git add ${FILE}
    oe ${FILE}
    git commit -m "New journal entry" ${FILE}
fi
