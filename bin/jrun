#!/bin/sh
. ~/.profile

FILE=$1
DIR=$(dirname "$FILE")
FILE=$(basename "$FILE")
EXT=${FILE##*.}
FILENOEXT=$(basename "$FILE" ".$EXT")

cd $DIR

if [ -f Makefile -o -f GNUmakefile ] ; then
    make $FILENOEXT
elif [ -f make.rkt ] ; then
    ARGS=$*
    if [ $FILE = make.rkt ] ; then
        ARGS=
    fi
    rkt make.rkt -- $ARGS
else
    case $EXT in
        java) exec javai $* ;;
        ll) exec llvmi $* ;;
        c) exec cci $* ;;
        sh) exec sh $* ;;
        py) exec python $* ;;
        cc) exec ccci $* ;;
        glsl) exec glslangValidator $* ;;
        rkt) exec rkt $* ;;
        ss) exec rkt $* ;;
        scrbl) exec rkt $* ;;
        poem) exec racket -l shakes -- $* ;;
        txt) exec ctxt $* ;;
        dot) exec dot -Tpdf -O $* ;;
        tex) exec pdflatex $FILENOEXT ;;
        hs) exec stack test --fast ;;
        *)
            echo Unknown extension: $EXT >&2
            break
            ;;
    esac
fi
