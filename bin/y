#!/bin/sh

MAYBE_PLAY=--no-playlist
if [ "x${PLAY}" = "xY" ] ; then
    MAYBE_PLAY=""
fi

# --netrc 
cd $HOME/Downloads/YouTube
exec youtube-dl --continue --ignore-errors --restrict-filenames --youtube-skip-dash-manifest --netrc --output "%(uploader)s - %(title)s.%(ext)s" --mark-watched --download-archive .archive.yd ${MAYBE_PLAY} $*
