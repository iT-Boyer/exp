#!/bin/bash

MODE=${1:-ls}
echo "MODE = '${MODE}'"
case ${MODE} in
    ls)
        ssh remote-office 'cd ~/Downloads; ls'
        ;;
    to)
        ssh remote-office 'cd ~/Downloads ; find . -type f \! -path "*MAME*" -exec echo /home/jay/local/dbxcli/dbxcli-linux-amd64 put {} dl/{} \;'
        ;;
    from)
        /Users/jay/Dev/dist/dbxcli/dbxcli-darwin-amd64 ls dl
        ;;
esac
