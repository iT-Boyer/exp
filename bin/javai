#/bin/bash
FILE=$1

cecho () {
      echo '\033[0;47;34m\c'
      echo $*
      echo '\033[0m\c'
}

cd "$(dirname "$FILE")" && \
cecho Compiling... && \
javac "$FILE" && \
cecho New classe files are: && \
ls -1 *.class && \
cecho Running... && \
java "$(basename "${FILE}" .java)" && \
cecho Cleaning up... && \
rm *.class