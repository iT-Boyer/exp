Config { font = "xft:Bitstream Vera Sans Mono:pixelsize=13:scalable=true:antialias=true",
         bgColor = "#002b36",
         fgColor = "#839496",
         position = TopW L 95,
         commands = [ Run Date "%a %b %e %H:%M" "date" 600,
                      Run Com "netcfgd" ["status"] "netcfgd" 10,
                      Run Com "volume" ["status"] "volume" 5,
                      Run Com "mpc_status.sh" [] "mpc" 10,
                      Run BatteryP ["BAT0"]
                          ["-t", "<acstatus><left>% <timeleft></fc>",
                           "--",
                           "-O", "<fc=#859900>",
                           "-o", "<fc=#dc322f>",
                           "-f", "ADP1/online" ]
                          600,
                      Run StdinReader ],
         sepChar = "%",
         alignSep = "}{",
         template = "%StdinReader%}{M %mpc% N %netcfgd% V <fc=#b58900>%volume%</fc> <fc=#eee8d5>%date%</fc> B %battery%"
       }
