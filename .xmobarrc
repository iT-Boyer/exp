Config { font = "xft:Bitstream Vera Sans Mono:pixelsize=13:scalable=true:antialias=true",
         bgColor = "#002b36",
         fgColor = "#839496",
         position = TopW L 90,
         commands = [ Run Date "%a %b %e %H:%M" "date" 600,
                      Run Com "netcfgd" ["status"] "netcfgd" 10,
                      Run Com "volume" ["status"] "volume" 10,
                      Run StdinReader ],
         sepChar = "%",
         alignSep = "}{",
         template = "%StdinReader% }{ %netcfgd% <fc=#839496>%date%</fc> %volume%"
       }
