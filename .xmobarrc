Config { font = "xft:Courier New-8:bold",
         bgColor = "black",
         fgColor = "grey",
         position = TopW L 90,
         commands = [ Run Date "%a %b %e %H:%M" "date" 60,
                      Run StdinReader ],
         sepChar = "%",         
         alignSep = "}{",
         template = "%StdinReader% }{ <fc=grey>%date%</fc>"
       }
